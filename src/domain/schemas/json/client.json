{
  "$id": "http://hgc.se/client.json",
  "type": "object",
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": ["name", "scope", "grants", "redirectUris"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "$id": "/properties/name",
      "title": "Name",
      "type": "string",
      "default": "",
      "readOnly": false,
      "minLength": 1
    },
    "scope": {
      "$id": "/properties/scope",
      "title": "Scope",
      "type": "string",
      "default": "",
      "readOnly": false,
      "minLength": 1
    },
    "grants": {
      "$id": "/properties/grants",
      "type": "array",
      "default": ["authorization_code", "password", "refresh_token", "client_credentials"],
      "readOnly": false,
      "items": {
        "$id": "/properties/grants/items",
        "title": "Grants",
        "type": "string",
        "default": ""
      }
    },
    "redirectUris": {
      "$id": "/properties/redirectUris",
      "title": "Redirect URIs",
      "type": "string",
      "readOnly": false,
      "default": ""
    }
  }
}