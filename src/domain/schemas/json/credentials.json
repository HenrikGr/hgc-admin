{
  "$id": "http://hgc.se/credentials.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["username", "password"],
  "additionalProperties": false,
  "properties": {
    "username": {
      "$id": "/properties/username",
      "title": "User name",
      "type": "string",
      "isNotEmpty": true,
      "minLength": 4,
      "default": ""
    },
    "password": {
      "$id": "/properties/password",
      "title": "Password",
      "type": "string",
      "isPassword": true,
      "default": ""
    }
  }
}