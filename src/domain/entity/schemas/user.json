{
  "$id": "http://hgc.se/user.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["username", "scope", "admin", "active"],
  "additionalProperties": false,
  "properties": {
    "_id": {
      "title": "Id",
      "type": "string",
      "readOnly": true
    },
    "username": {
      "title": "User name",
      "type": "string",
      "default": "",
      "isNotEmpty": true
    },
    "scope": {
      "title": "Scope",
      "type": "string",
      "default": "",
      "isNotEmpty": true
    },
    "admin": {
      "title": "Admin",
      "type": "boolean",
      "default": false
    },
    "active": {
      "title": "Active",
      "type": "boolean",
      "default": false
    },
    "updatedAt": {
      "title": "Updated at",
      "type": "string",
      "readOnly": true
    },
    "createdAt": {
      "title": "Created at",
      "type": "string",
      "readOnly": true
    }
  }
}